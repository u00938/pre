{
  "name": "earnion-api",
  "version": "0.1.3",
  "description": "earnion-api server",
  "main": "src/app.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=dev nodemon",
    "test": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register src/test/**/*.ts",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lintfix": "eslint --ignore-path .gitignore --ext .ts src/ --fix",
    "dev": "NODE_ENV=dev pm2 start ts-node -- -r tsconfig-paths/register --transpile-only ./src/app.ts",
    "prod": "NODE_ENV=prod pm2 start ts-node -i 0 -- -r tsconfig-paths/register --transpile-only ./src/app.ts"
  },
  "private": true,
  "author": "indexmine (lightsky340@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "celebrate": "^15.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "html-escaper": "^3.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "typeorm": "<=0.2.37",
    "typeorm-model-generator": "^0.4.6",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.17.5",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.3.5"
  }
}
